<div id="appBoletosVendidos" class="modal fade" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-sm" style="top:10%;">
        <div class="modal-content">
            <div class="modal-body">
                <button @@click="cerrarVenta" type="button" class="close">&times;</button>
                <div class="form-horizontal">
                    <div class="form-group m-b-0">
                        <div class="col-md-12 text-center">
                            <i class="fa fa-check-circle faImgTitle"></i>
                        </div>
                    </div>
                    <div class="form-group m-b-0">
                        <div class="col-md-12">
                            <template v-if="$getValuePickedBusVenta() == 'R'">
                                <h1 v-if="tmpCantidadVendida <= 1" class="text-center boletosVendidosTitle">RESERVA REALIZADA CON ÉXITO</h1>
                                <h1 v-else class="text-center boletosVendidosTitle">RESERVAS REALIZADAS CON ÉXITO</h1>
                            </template>
                            <template v-else>
                                <h1 v-if="tmpCantidadVendida <= 1" class="text-center boletosVendidosTitle">BOLETO VENDIDO</h1>
                                <h1 v-else class="text-center boletosVendidosTitle">BOLETOS VENDIDOS</h1>
                            </template>
                            <hr class="colorHr" />
                        </div>
                    </div>
                    <div class="form-group m-b-0">
                        <div class="col-md-12 text-left">
                            <p v-for="boleto in boletos" class="boletosVendidos">
                                Asiento {{boleto.NumeAsiento}}:&ensp;N° {{boleto.BoletoCompleto | formatNroVenta}}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer mfBoletosVendidos">
                <button id="btnCerrarVenta" @@click="cerrarVenta" class="btn btn-info waves-effect text-left">
                    <span class="fa fa-save fa-fw"></span>ACEPTAR
                </button>
            </div>
        </div>
    </div>
</div>
