<div id="appBoletosVendidos" @@keydown.esc="cerrarVenta" class="modal fade" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-sm" style="top:10%;" @*style="position: absolute;top: 50%;left: 50%;transform: translate(-50%, -50%) !important;"*@>
        <div class="modal-content">
            <div class="modal-body">
                <button @@click="cerrarVenta" type="button" class="close">&times;</button>
                <div class="form-horizontal">
                    <div class="form-group m-b-0">
                        <div class="col-md-12 text-center">
                            <i class="fa fa-check-circle faImgTitle"></i>
                        </div>
                    </div>
                    <div class="form-group m-b-0">
                        <div class="col-md-12">
                            <h1 class="text-center boletosVendidosTitle">BOLETOS VENDIDOS</h1>
                            <hr class="colorHr" />
                        </div>
                    </div>
                    <div class="form-group m-b-0">
                        <div class="col-md-12 text-left">
                            <p v-for="boleto in boletos" class="boletosVendidos">N:&ensp;{{boleto}}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer mfBoletosVendidos">
                <button id="btnCerrarVenta" @@click="cerrarVenta" class="btn btn-info waves-effect waves-light text-left">
                    <span class="fa fa-save fa-fw"></span>ACEPTAR
                </button>
            </div>
        </div>
    </div>
</div>
