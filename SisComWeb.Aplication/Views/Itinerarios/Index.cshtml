            };
        })();

        var appVueFilter = new Vue({
            el: '#appVueFilter',
            data: {
                filtro: {
                    OrigenPas: null,
                    DestinoPas: null,
                    DestinoBus: null
                },
                list: {
                    origenesPas: [],
                    destinosPas: [],
                    destinosBus: []
                }
            },
            mounted: function () {
                $(".preloader").fadeIn();
                this.$nextTick(() => {
                    $('.vs__selected-options input[type=search]').addClass('input-sm');
                    $('#cboOrigenPas input[type=search]').focus();
                    $(".preloader").fadeOut();
                });
            },
            methods: {
                getLabel(option) {
                    return `${option.id} - ${option.label}`
                },
            },
            computed: {
            },
            watch: {
            }
        });

    </script>
}