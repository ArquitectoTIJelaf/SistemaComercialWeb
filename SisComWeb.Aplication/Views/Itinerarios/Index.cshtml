@using SisComWeb.Aplication.Helpers

@{
    ViewBag.Title = "Ventas";
    var usuario = DataSession.UsuarioLogueado;
}

@Html.Partial("_Filtros")
@Html.Partial("_Table")

@section styles{
    <style>
        .input-group-addon {
            border-radius: 4px;
            border: 1px solid rgb(228, 231, 234);
            color: #2a97f4;
            background-color: #fff;
        }
    </style>
}

@section scripts{
    <script>

        $(function () {

            if ($('.dp').length) {

                $('#spnFecha').click(function (event) {
                    event.preventDefault();
                    $('#txtFecha').focus();
                });
            }

        });

        Vue.filter('money', function (value) {
            if (typeof value !== 'undefined' && value !== '') {
                value = parseFloat(value);
                return 'S/ ' + value.toFixed(2);
            } else {
                return 'S/ 0.00';
            }
        });

        Vue.filter('fixed2', function (value) {
            if (typeof value !== 'undefined' && value !== '') {
                value = parseFloat(value);
                return String(value.toFixed(2));
            } else {
                return '0.00';
            }
        });

        var selectAll = {
            id: 0,
            label: 'TODOS'
        }

        var appController = (function () {
            return {
                loadTable: function (_list) {
                    appVueTable.loadTable(_list)
                }
            };
        })();

        var appVueFilter = new Vue({
            el: '#appVueFilter',
            data: {
                filtro: {
                    CodiOrigen: null,
                    CodiDestino: null,
                    CodiRuta: null,
                    FechaViaje: '',
                    Hora: '',
                    TodosTurnos: false,
                    SoloProgramados: false
                },
                list: {
                    origenesPas: [],
                    destinosPas: [],
                    destinosBus: []
                }
            },
            mounted: function () {
                $(".preloader").fadeIn();
                this.getSucursales();
                this.$nextTick(() => {
                    $('.vs__selected-options input[type=search]').addClass('input-sm');
                    $('#cboOrigenPas input[type=search]').focus();
                    $(".preloader").fadeOut();
                });
            },
            methods: {
                getLabel(option) {
                    return `${option.id} - ${option.label}`
                },
                getSucursales() {
                    var _this = this;
                    APP.rq.axios2.get(APP.base + '/base/get-oficinas')
                        .then(res => {
                            debugger;
                            _this.list.origenesPas = res.data;
                            _this.filtro.CodiOrigen = _this.list.origenesPas.find(x => x.id === '@usuario.CodiSucursal')
                            _this.list.destinosPas = res.data;
                            _this.list.destinosBus = res.data;
                        }).catch(APP.rq.axios_handler_error_alert);
                },
                search() {
                    var _this = this;
                    var input = {};
                    input.CodiOrigen = _this.filtro.CodiOrigen.id;
                    input.CodiDestino = _this.filtro.CodiDestino.id;
                    input.CodiRuta = (_this.filtro.CodiRuta) ? _this.filtro.CodiRuta.id : 0;
                    input.FechaViaje = _this.filtro.FechaViaje;
                    input.Hora = _this.filtro.Hora;
                    input.TodosTurnos = _this.filtro.TodosTurnos;
                    input.SoloProgramados = _this.filtro.SoloProgramados;
                    APP.rq.axios.post(APP.base + '/itinerarios/lista-itinerarios', input)
                        .then(res => {
                            debugger;
                            appController.loadTable(res.data);
                        }).catch(APP.rq.axios_handler_error_alert);
                },
                recorrido: function () {
                    var _this = this;
                    if (_this.filtro.CodiOrigen === null) {
                        $('#cboOrigenPas input[type=search]').focus();
                    } else if (_this.filtro.CodiDestino === null) {
                        $('#cboDestinoPas input[type=search]').focus();
                    } else if (_this.filtro.CodiRuta === null) {
                        $('#cboDestinoBus input[type=search]').focus();
                    } else if (_this.filtro.FechaViaje === '') {
                        $('#txtFecha').focus();
                        //} else if (_this.filtro.Hora === '') {
                        //    $('#txtHora').focus();
                    } else {
                        _this.search();
                    }
                }
            },
            computed: {
            },
            watch: {
                'filtro.CodiOrigen': function (newVal, oldVal) {
                    this.recorrido();
                },
                'filtro.CodiDestino': function (newVal, oldVal) {
                    this.recorrido();
                },
                'filtro.CodiRuta': function (newVal, oldVal) {
                    this.recorrido();
                },
                'filtro.FechaViaje': function (newVal, oldVal) {
                    if (String(newVal).replace(/\s/g, '').length > 0)
                        this.recorrido();
                },
                'filtro.Hora': function (newVal, oldVal) {
                    if (String(newVal).replace(/\s/g, '').length > 0)
                        this.recorrido();
                }
            }
        });

        var appVueTable = new Vue({
            el: '#appVueTable',
            data: {
                list: {
                    itinerarios: []
                }
            },
            mounted: function () {
            },
            methods: {
                loadTable: function (_list) {
                    this.list.itinerarios = _list;
                }
            },
            computed: {
            },
            watch: {
            }
        });

    </script>
}