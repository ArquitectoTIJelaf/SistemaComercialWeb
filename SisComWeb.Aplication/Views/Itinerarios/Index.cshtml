@using SisComWeb.Aplication.Helpers

@{
    ViewBag.Title = "Ventas";
    var usuario = DataSession.UsuarioLogueado;
}

@Html.Partial("_Filtros")
@Html.Partial("_Table")
@Html.Partial("_Venta")

@section styles{
    <style>
        .input-group-addon {
            border-radius: 4px;
            border: 1px solid rgb(228, 231, 234);
            color: #2a97f4;
            background-color: white;
        }

        ul.pagination {
            display: inline-block;
            padding: 0;
            margin: 0;
            background-color: white;
            padding: 5px;
            border-radius: 8px;
            cursor: pointer;
        }

            ul.pagination li {
                display: inline;
            }

                ul.pagination li a {
                    color: black;
                    float: left;
                    padding: 8px 16px;
                    text-decoration: none;
                    transition: background-color .3s;
                    border: 1px solid #ddd;
                    margin: 0 4px;
                    border-radius: 50%;
                }

                    ul.pagination li a.active {
                        background-color: #4CAF50;
                        color: white;
                        border: 1px solid #4CAF50;
                    }

                    ul.pagination li a:hover:not(.active) {
                        background-color: #ddd;
                    }

        .pagination > li:first-child > a {
            border-top-left-radius: 50%;
            border-bottom-left-radius: 50%
        }

        .pagination > li:last-child > a {
            border-bottom-right-radius: 50%;
            border-top-right-radius: 50%;
        }

        .table-responsive > ul {
            display: none;
        }

        .btn-inverse:focus {
            background-color: #A1ABB7 !important;
            border: 1px solid #A1ABB7 !important;
        }

        .custom-td {
            border-color: transparent !important;
        }

        .container-bus {
            display: inline-block;
            width: 100%;
        }

        .img-bus {
            float: left;
        }

        .form-bus {
            background-color: #616e7e;
            width: calc(100% - 108px);
            border: 2px solid #4b4a4b;
            border-radius: 0 8px 8px 0;
        }

        .table-bus {
            cursor: default;
            background-color: white;
            height: 252px;
        }
    </style>
}

@section scripts{
    <script>

        $(function () {

            if ($('.dp').length) {

                $('#spnFecha').click(function (event) {
                    event.preventDefault();
                    $('#txtFecha').focus();
                });
            }

        });

        Vue.filter('money', function (value) {
            if (typeof value !== 'undefined' && value !== '') {
                value = parseFloat(value);
                return 'S/ ' + value.toFixed(2);
            } else {
                return 'S/ 0.00';
            }
        });

        Vue.filter('fixed2', function (value) {
            if (typeof value !== 'undefined' && value !== '') {
                value = parseFloat(value);
                return String(value.toFixed(2));
            } else {
                return '0.00';
            }
        });

        var selectAll = {
            id: 0,
            label: 'TODOS'
        }

        var appController = (function () {
            return {
                loadTable: function (_list) {
                    appVueTable.loadTable(_list)
                },
                showVentas: function (_item) {
                    appVueFilter.showVentas = true;
                    appVueTable.showVentas = true;
                    appVueVenta.showVentas = true;
                    appVueVenta.item = _item;
                },
                hideVentas: function () {
                    appVueFilter.showVentas = false;
                    appVueTable.showVentas = false;
                    appVueVenta.showVentas = false;
                }
            };
        })();

        var appVueFilter = new Vue({
            el: '#appVueFilter',
            data: {
                filtro: {
                    CodiOrigen: null,
                    CodiDestino: null,
                    CodiRuta: null,
                    FechaViaje: '',
                    Hora: '',
                    TodosTurnos: false,
                    SoloProgramados: false
                },
                list: {
                    origenesPas: [],
                    destinosPas: [],
                    destinosBus: []
                },
                showVentas: false
            },
            mounted: function () {
                $(".preloader").fadeIn();
                this.getSucursales();
                this.$nextTick(() => {
                    $('.vs__selected-options input[type=search]').addClass('input-sm');
                    $('#cboOrigenPas input[type=search]').focus();
                    $(".preloader").fadeOut();
                });
            },
            methods: {
                getLabel(option) {
                    return `${option.id} - ${option.label}`
                },
                getSucursales() {
                    var _this = this;
                    APP.rq.axios2.get(APP.base + '/base/get-oficinas')
                        .then(res => {
                            _this.list.origenesPas = _.cloneDeep(res.data);
                            _this.filtro.CodiOrigen = _this.list.origenesPas.find(x => x.id === '@usuario.CodiSucursal')
                            _this.list.destinosPas = _.cloneDeep(res.data);
                            _this.list.destinosBus = _.cloneDeep(res.data);
                            _this.list.destinosBus.unshift(selectAll);
                        }).catch(APP.rq.axios_handler_error_alert);
                },
                search() {
                    var _this = this;
                    var input = {};
                    input.CodiOrigen = _this.filtro.CodiOrigen.id;
                    input.CodiDestino = _this.filtro.CodiDestino.id;
                    input.CodiRuta = (_this.filtro.CodiRuta) ? _this.filtro.CodiRuta.id : 0;
                    input.FechaViaje = _this.filtro.FechaViaje;
                    input.Hora = _this.filtro.Hora;
                    input.TodosTurnos = _this.filtro.TodosTurnos;
                    input.SoloProgramados = _this.filtro.SoloProgramados;
                    APP.rq.axios.post(APP.base + '/itinerarios/lista-itinerarios', input)
                        .then(res => {
                            appController.loadTable(res.data);
                        }).catch(APP.rq.axios_handler_error_alert);
                },
                recorrido: function () {
                    var _this = this;
                    if (_this.filtro.CodiOrigen === null) {
                        $('#cboOrigenPas input[type=search]').focus();
                    } else if (_this.filtro.CodiDestino === null) {
                        $('#cboDestinoPas input[type=search]').focus();
                    } else if (_this.filtro.CodiRuta === null) {
                        $('#cboDestinoBus input[type=search]').focus();
                    } else if (_this.filtro.FechaViaje === '') {
                        $('#txtFecha').focus();
                    } else if (_this.filtro.Hora === '') {
                        $('#txtHora').focus();
                    } else {
                        $('#buscar').focus();
                    }
                }
            },
            computed: {
            },
            watch: {
                'filtro.CodiOrigen': function (newVal, oldVal) {
                    this.recorrido();
                },
                'filtro.CodiDestino': function (newVal, oldVal) {
                    this.recorrido();
                },
                'filtro.CodiRuta': function (newVal, oldVal) {
                    this.recorrido();
                },
                'filtro.FechaViaje': function (newVal, oldVal) {
                    if (String(newVal).replace(/\s/g, '').length > 0)
                        this.recorrido();
                },
                'filtro.Hora': function (newVal, oldVal) {
                    if (String(newVal).replace(/\s/g, '').length > 0)
                        this.recorrido();
                }
            }
        });

        var appVueTable = new Vue({
            el: '#appVueTable',
            data: {
                list: {
                    itinerarios: []
                },
                paginate: ['items'],
                showVentas: false
            },
            mounted: function () {
            },
            methods: {
                loadTable: function (list) {                                     
                    this.list.itinerarios = list;
                    this.$nextTick(() => {
                        this.shown = true
                    });
                },
                sendRow: function (item) {
                    appController.showVentas(item);
                }
            },
            computed: {
            },
            watch: {
            }
        });

        var appVueVenta = new Vue({
            el: '#appVueVenta',
            data: {
                item: {},
                filtro: {
                    CodiEmpresa: null,
                    CodiSucursal: null,
                    CodiOrigenBus: null,
                    CodiPVOrigenBus: null,
                    CodiDestinoBus: null,
                    CodiServicio: null,
                    CodiDestinoPas: null
                },
                list: {
                    empresas: [],
                    sucursales: [],
                    origenesBus: [],
                    pvOrigenesBus: [],
                    destinosBus: [],
                    servicios: [],
                    destinosPas: [],
                },
                showVentas: false
            },
            mounted: function () {
                this.getEmpresas();
                this.getSucursales();
                this.getOrigenesBus();
                this.getDestinosBus();
                this.getServicios();
                this.getDestinosPas();
                this.$nextTick(() => {
                    $('.vs__selected-options input[type=search]').addClass('input-sm');
                });
            },
            methods: {
                getLabel(option) {
                    return `${option.id} - ${option.label}`
                },
                getEmpresas() {
                    var _this = this;
                    APP.rq.axios2.get(APP.base + '/base/get-empresas')
                        .then(res => {
                            _this.list.empresas = _.cloneDeep(res.data);
                        }).catch(APP.rq.axios_handler_error_alert);
                },
                getSucursales() {
                    var _this = this;
                    APP.rq.axios2.get(APP.base + '/base/get-oficinas')
                        .then(res => {
                            _this.list.sucursales = _.cloneDeep(res.data);
                        }).catch(APP.rq.axios_handler_error_alert);
                },
                getOrigenesBus() {
                    var _this = this;
                    APP.rq.axios2.get(APP.base + '/base/get-oficinas')
                        .then(res => {
                            _this.list.origenesBus = _.cloneDeep(res.data);
                        }).catch(APP.rq.axios_handler_error_alert);
                },
                getPVOrigenesBus(Codi_OrigenBus) {
                    var _this = this;
                    APP.rq.axios2.get(APP.base + '/base/get-puntosventa', { params: { CodiSucursal: Codi_OrigenBus } })
                        .then(res => {
                            _this.list.pvOrigenesBus = _.cloneDeep(res.data);
                        }).catch(APP.rq.axios_handler_error_alert);
                },
                getDestinosBus() {
                    var _this = this;
                    APP.rq.axios2.get(APP.base + '/base/get-oficinas')
                        .then(res => {
                            _this.list.destinosBus = _.cloneDeep(res.data);
                        }).catch(APP.rq.axios_handler_error_alert);
                },
                getServicios() {
                    var _this = this;
                    APP.rq.axios2.get(APP.base + '/base/get-servicios')
                        .then(res => {
                            _this.list.servicios = _.cloneDeep(res.data);
                        }).catch(APP.rq.axios_handler_error_alert);
                },
                getDestinosPas() {
                    var _this = this;
                    APP.rq.axios2.get(APP.base + '/base/get-oficinas')
                        .then(res => {
                            _this.list.destinosPas = _.cloneDeep(res.data);
                        }).catch(APP.rq.axios_handler_error_alert);
                },
                hideVentas() {
                    appController.hideVentas();
                }
            },
            computed: {
            },
            watch: {
                'filtro.CodiOrigenBus': function (newVal) {
                    if (newVal) {
                        if (String(newVal.id).replace(/\s/g, '').length > 0) {
                            this.getPVOrigenesBus(newVal.id);
                            // Limpiamos el último valor seleccionado
                            this.filtro.CodiPVOrigenBus = null;
                        }
                    } else {
                        this.list.pvOrigenesBus = [];
                        this.filtro.CodiPVOrigenBus = null;
                    }
                }
            }
        });

    </script>
}