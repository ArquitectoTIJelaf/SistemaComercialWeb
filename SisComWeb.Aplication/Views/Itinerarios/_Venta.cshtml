
<div id="appVueVenta" v-show="showVentas" class="row">
    <div class="col-md-12">
        <div class="white-box" @*style="background: transparent;padding: 15px 0 15px 0;"*@>
            <div @*class="custom-scroll-container"*@>

                <div class="row">
                    <div class="col-md-10">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Empresa:</label>
                                <v-select v-model="filtro.CodiEmpresa"
                                          :id="'cboEmpresa'"
                                          label="label"
                                          :get-option-label="getLabel"
                                          :options="list.empresas"
                                          :placeholder="'EMPRESA'"
                                          ref="select">
                                    <span slot="no-options" class="text-danger">No hay resultados</span>
                                </v-select>
                            </div>
                        </div>
                        <div class="col-md-2" style="text-align: center; margin-top: 30px; ">
                            <label class="control-label">Nº Viaje: {{item.NroViaje}}</label>
                        </div>
                        <div class="col-md-2" style="text-align: center; margin-top: 30px; ">
                            <label class="control-label">Nº Programación: {{item.CodiProgramacion}}</label>
                        </div>
                    </div>
                    <div class="col-md-2" style="text-align: right; ">
                        <div style="display: inline-block; cursor: pointer;">
                            <img src="~/wwwroot/plugins/images/RELOAD.png" style="margin: 0px 0px 3px 10px; " />
                            <label style="cursor: pointer; ">Actualizar</label>
                        </div>
                        <div @@click="hideVentas" style="display: inline-block; cursor: pointer;">
                            <img src="~/wwwroot/plugins/images/ATRAS.png" style="margin: 0px 0px 3px 10px; " />
                            <label style="cursor: pointer; ">Atrás</label>
                        </div>
                        <div style="display: inline-block; cursor: pointer;">
                            <img src="~/wwwroot/plugins/images/CERRAR.png" style="margin: 0px 0px 3px 10px; " />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <img src="~/wwwroot/plugins/images/BUS3.png" style="margin: 0px 0px 3px 5px; " />
                        <label class="control-label" style="margin: 10px 10px; ">
                            Con embarque en: {{item.NroViaje}}
                        </label>
                    </div>
                </div>

                <div class="table-responsive" style="background-color: #616e7e;">
                    <table id="tblLista" class="table table-hover" style="cursor:default;background-color:white;">
                        <tbody>
                            <tr>
                                <td rowspan="6" class="td-bus">
                                    <img src="~/wwwroot/plugins/images/users/cabecera-carro.png" />
                                </td>
                            </tr>
                            <tr>
                                <td v-for="a in 17" class="custom-td"></td>
                            </tr>
                            <tr>
                                <td v-for="a in 17" class="custom-td"></td>
                            </tr>
                            <tr>
                                <td v-for="a in 17" class="custom-td"></td>
                            </tr>
                            <tr>
                                <td v-for="a in 17" class="custom-td"></td>
                            </tr>
                            <tr>
                                <td v-for="a in 17" class="custom-td"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
