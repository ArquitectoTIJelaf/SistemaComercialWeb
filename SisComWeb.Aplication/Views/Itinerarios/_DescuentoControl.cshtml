<div id="appVueDescuentoControl" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" style="width: 400px; top:50%; transform: translateY(-50%)">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" @@click="cancelarDescuentoControl">&times;</button>
                <h4 class="modal-title"><b>Control de Descuento</b></h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group m-b-15">
                        <div class="col-md-12">
                            <label class="col-md-8 control-label label-sm" style="text-align: left; ">Importe de boleto:</label>
                            <div class="col-md-4">
                                <div class="col-md-2" style="margin-top: 7px; ">
                                    S/
                                </div>
                                <div class="col-md-10">
                                    <input :value="ImporteBoleto"
                                           id="txtImporteBoletoDC"
                                           type="text"
                                           class="form-control input-sm"
                                           style="text-align: right; "
                                           disabled="disabled" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group m-b-15">
                        <div class="col-md-12">
                            <div class="col-md-8">
                                <input name="groupRadDescuentoTipo" type="radio" id="descSolesDC" class="rbDescTipo" value="0" v-model="DescuentoTipo">
                                <label for="descSolesDC"
                                       class="lblDescTipo"
                                       style="line-height: inherit; ">
                                    Descuento en Soles
                                </label>
                                <input name="groupRadDescuentoTipo" type="radio" id="descPorcDC" class="rbDescTipo" value="1" v-model="DescuentoTipo">
                                <label for="descPorcDC"
                                       class="lblDescTipo"
                                       style="line-height: inherit; ">
                                    Descuento en Porcentaje
                                </label>
                            </div>
                            <div class="col-md-4">
                                <template v-if="DescuentoTipo == '0'">
                                    <div class="col-md-2" style="margin-top: 12px; ">
                                        S/
                                    </div>
                                </template>
                                <template v-else>
                                    <div class="col-md-2" style="margin-top: 12px; ">
                                        %
                                    </div>
                                </template>
                                <div class="col-md-10">
                                    <input v-model="ImporteDescuento"
                                           id="txtImporteDescDC"
                                           class="form-control input-sm"
                                           onPaste="return false"
                                           @@input="ImporteDescuento = $filterNumberWithTwoDecimals(ImporteDescuento, 3)"
                                           @@keydown.13.prevent="recorrerDescuentoControl(true)"
                                           @*@@keydown.9.prevent="recorrerDescuentoControl(true)"*@
                                           type="text"
                                           placeholder="0.00"
                                           autocomplete="off"
                                           style="height: 38px; text-align: right; " />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group m-b-25">
                        <div class="col-md-12">
                            <label class="col-md-8 control-label label-sm" style="text-align: left; ">Importe descontado:</label>
                            <div class="col-md-4">
                                <div class="col-md-2" style="margin-top: 7px; ">
                                    S/
                                </div>
                                <div class="col-md-10">
                                    <input :value="ImporteDescontado"
                                           id="txtImporteDescontadoDC"
                                           type="text"
                                           class="form-control input-sm"
                                           style="text-align: right; "
                                           disabled="disabled" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group m-b-10">
                        <div class="col-md-12">
                            <label class="col-md-5 control-label label-sm" style="text-align: left; ">Autorizado por:</label>
                            <div class="col-md-7">
                                <input v-model="Autorizado"
                                       id="txtAutorizadoDC"
                                       type="text"
                                       @@keydown.13.prevent="recorrerDescuentoControl()"
                                       @*@@keydown.9.prevent="recorrerDescuentoControl()"*@
                                       class="form-control input-sm"
                                       placeholder="NOMBRE" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group m-b-15">
                        <div class="col-md-12">
                            <label class="col-md-5 control-label label-sm" style="text-align: left; ">Clave de autorización:</label>
                            <div class="col-md-7">
                                <input v-model="Clave"
                                       id="txtClaveAutorizacionDC"
                                       type="password"
                                       @@keydown.13.prevent="saveDescuentoControl()"
                                       @*@@keydown.9.prevent="recorrerDescuentoControl()"*@
                                       class="form-control input-sm"
                                       placeholder="CLAVE" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnAceptarDC" @@click="saveDescuentoControl" class="btn btn-primary waves-effect text-left">
                    <span class="fa fa-save fa-fw"></span>Aceptar
                </button>
                <button @@click="cancelarDescuentoControl" class="btn btn-inverse waves-effect text-left">
                    <span class="glyphicon glyphicon-log-out fa-fw"></span>Cancelar
                </button>
            </div>
        </div>
    </div>
</div>
