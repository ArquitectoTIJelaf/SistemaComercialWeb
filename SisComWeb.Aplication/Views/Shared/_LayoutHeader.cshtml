            border-right: 1px solid #0e2843;
        }

    #appVueNavarHeader .dropdown-menu > li > a > span {
        float: right;
    }

    #appVueNavarHeader .borderBottom.active, .borderBottom:hover {
        border-bottom: 4px solid #009cff;
    }

    #appVueNavarHeader .borderBottom.active a, .borderBottom:hover a {
        color: #009cff;
    }
</style>

<script>
    function setClassActiveToBorderBottom() {
        var elements = document.getElementsByClassName("borderBottom");
        if (elements) {
            for (var i = 0; i < elements.length; i++) {
                elements[i].addEventListener("click", function () {
                    var current = document.getElementsByClassName("active");
                    current[0].className = current[0].className.replace(" active", "");
                    this.className += " active";
                });
            }
        }
    }

    window.onload = function () {
        setClassActiveToBorderBottom();
    };

</script>

