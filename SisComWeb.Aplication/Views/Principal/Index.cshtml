@{
    ViewBag.Title = "Principal";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";

    var ImagePath = HttpContext.Current.Request.ApplicationPath == "/" ? "" : HttpContext.Current.Request.ApplicationPath;
}

@section styles{
    <style type="text/css">
        #principal {
            text-align: center;
            width: 100%;
        }

            #principal .item {
                background: #fff;
                border: 1px solid #e8e8e8;
                border-bottom: 5px solid #999999;
                display: inline-block;
                height: 175px;
                margin-right: 10px;
                margin-left: 10px;
                margin-bottom: 20px;
                text-align: center;
                width: 150px;
            }

            #principal img {
                margin-top: 30px;
                margin-bottom: 10px;
            }

            #principal h5 {
                font-weight: 500;
            }

            #principal .item:hover {
                border-bottom: 5px solid #009cff !important;
            }

        @@media(max-width: 600px) {
            #principal .item {
                height: 140px;
            }

            #principal img {
                margin-top: 20px;
            }
        }
    </style>
}

<div id="principal">

    <a href="@Url.Action("Index","Itinerarios")">
        <div id="itemVentas" class="item" @@mouseover="changeImg1(0)" @@mouseout="changeImg1(1)">
            <img id="ventas" :src="img1" />
            <h5>Ventas</h5>
        </div>
    </a>

    <a href="javascript:void(0);">
        <div id="itemClientes" class="item" @@mouseover="changeImg2(0)" @@mouseout="changeImg2(1)">
            <img id="clientes" :src="img2" />
            <h5>Clientes</h5>
        </div>
    </a>

    <a href="javascript:void(0);">
        <div id="itemCorrelativos" class="item" @@mouseover="changeImg3(0)" @@mouseout="changeImg3(1)">
            <img id="correlativos" :src="img3" />
            <h5>Correlativos</h5>
        </div>
    </a>

    <a href="javascript:void(0);">
        <div id="itemRutas" class="item" @@mouseover="changeImg4(0)" @@mouseout="changeImg4(1)">
            <img id="rutas" :src="img4" />
            <h5>Rutas y precios</h5>
        </div>
    </a>

    <a href="javascript:void(0);">
        <div id="itemLiquidaciones" class="item" @@mouseover="changeImg5(0)" @@mouseout="changeImg5(1)">
            <img id="liquidaciones" :src="img5" />
            <h5>Liquidación</h5>
        </div>
    </a>

</div>

@section scripts{
    <script type="text/javascript">

        var classOne = 'webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend';
        var Class = 'item pulse animated';

        var Img1 = '@ImagePath' + '/wwwroot/plugins/images/VENTA1.png';
        var Img2 = '@ImagePath' + '/wwwroot/plugins/images/CLIENTE1.png';
        var Img3 = '@ImagePath' + '/wwwroot/plugins/images/CORELA1.png';
        var Img4 = '@ImagePath' + '/wwwroot/plugins/images/RUTAS1.png';
        var Img5 = '@ImagePath' + '/wwwroot/plugins/images/LIQ1.png';

        var Img6 = '@ImagePath' + '/wwwroot/plugins/images/VENTA2.png';
        var Img7 = '@ImagePath' + '/wwwroot/plugins/images/CLIENTES2.png';
        var Img8 = '@ImagePath' + '/wwwroot/plugins/images/CORELA2.png';
        var Img9 = '@ImagePath' + '/wwwroot/plugins/images/RUTAS2.png';
        var Img10 = '@ImagePath' + '/wwwroot/plugins/images/LIQU2.png';

        var Principal = new Vue({
            el: '#principal',
            data: {
                img1: Img1,
                img2: Img2,
                img3: Img3,
                img4: Img4,
                img5: Img5
            },
            mounted: function () {
                window.addEventListener('keyup', function (event) {
                    if (event.keyCode == 49 || event.keyCode == 97) { $('#itemVentas').click(); }
                    else if (event.keyCode == 50 || event.keyCode == 98) { }
                    else if (event.keyCode == 51 || event.keyCode == 99) { }
                    else if (event.keyCode == 52 || event.keyCode == 100) { }
                    else if (event.keyCode == 53 || event.keyCode == 101) { }
                });
            },
            methods: {
                changeImg1: function (index) {
                    if (index === 0) {
                        this.img1 = Img6;
                        $('#itemVentas').removeClass().addClass(Class).one(classOne, function () {
                            $(this).removeClass().addClass('item');
                        });
                    } else {
                        this.img1 = Img1;
                    }
                },
                changeImg2: function (index) {
                    if (index === 0) {
                        this.img2 = Img7;
                        $('#itemClientes').removeClass().addClass(Class).one(classOne, function () {
                            $(this).removeClass().addClass('item');
                        });
                    } else {
                        this.img2 = Img2;
                    }
                },
                changeImg3: function (index) {
                    if (index === 0) {
                        this.img3 = Img8;
                        $('#itemCorrelativos').removeClass().addClass(Class).one(classOne, function () {
                            $(this).removeClass().addClass('item');
                        });
                    } else {
                        this.img3 = Img3;
                    }
                },
                changeImg4: function (index) {
                    if (index === 0) {
                        this.img4 = Img9;
                        $('#itemRutas').removeClass().addClass(Class).one(classOne, function () {
                            $(this).removeClass().addClass('item');
                        });
                    } else {
                        this.img4 = Img4;
                    }
                },
                changeImg5: function (index) {
                    if (index === 0) {
                        this.img5 = Img10;
                        $('#itemLiquidaciones').removeClass().addClass(Class).one(classOne, function () {
                            $(this).removeClass().addClass('item');
                        });
                    } else {
                        this.img5 = Img5;
                    }
                },
            }
        });
    </script>
}